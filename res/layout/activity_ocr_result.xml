<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zoway.parkmanage.view.OcrResultActivity" >

    <LinearLayout
        android:id="@+id/tkephotoly1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ff0878ca" >

            <TextView
                android:id="@+id/infofrguna"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="3dp"
                android:gravity="center_vertical"
                android:text="车牌确认"
                android:textColor="#ffffffff"
                android:textSize="32sp" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/tkephotoly2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tkephotoly1"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="30dp" >

        <LinearLayout
            android:id="@+id/ly1"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:gravity="bottom"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >

                <Spinner
                    android:id="@+id/comshengfen"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dialog" />

                <EditText
                    android:id="@+id/txtocrreshphm"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:background="@drawable/bg_edittext"
                    android:gravity="bottom|right"
                    android:hint="123456"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textCursorDrawable="@null"
                    android:textSize="33sp"
                    android:width="150dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly2"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignLeft="@id/ly1"
            android:layout_alignRight="@id/ly1"
            android:layout_below="@id/ly1"
            android:layout_marginTop="20dp"
            android:gravity="bottom"
            android:orientation="vertical" >

            <Spinner
                android:id="@+id/comhpzl"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:spinnerMode="dialog" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly3"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_alignLeft="@id/ly2"
            android:layout_alignRight="@id/ly2"
            android:layout_below="@id/ly2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:gravity="bottom"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/parkno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:background="@drawable/bg_edittext"
                    android:gravity="bottom|right"
                    android:hint="车位位置"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textCursorDrawable="@null"
                    android:textSize="30sp"
                    android:visibility="invisible"
                    android:width="150dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/ly3"
            android:layout_marginTop="30dp"
            android:gravity="bottom|center_horizontal" >

            <Button
                android:id="@+id/btnressure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ff30cf86"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="确认"
                android:textColor="#ffffffff"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btnrescancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:background="#ff30cf86"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="重拍"
                android:textColor="#ffffffff"
                android:textSize="30sp" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>