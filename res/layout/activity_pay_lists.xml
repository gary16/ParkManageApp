<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zoway.parkmanage.view.PayListsActivity" >

    <LinearLayout
        android:id="@+id/unhandlely1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ff0878ca" >

        <TextView
            android:id="@+id/infofrguna"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginLeft="3dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="结算列表"
            android:textColor="#ffffffff"
            android:textSize="32sp" />

        <Button
            android:id="@+id/btnocrpay"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_gravity="center"
            android:layout_marginRight="3dp"
            android:background="@drawable/logout_bg"
            android:gravity="center"
            android:text="识别"
            android:textColor="#ffffffff"
            android:textSize="23sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/unhandlely2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/unhandlely1"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/lalhphm"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_marginLeft="5dp"
            android:text="车牌号码"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/edtquery"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="5dp" />
    </LinearLayout>

    <ExpandableListView
        android:id="@+id/reclist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/unhandlely2"
        android:layout_marginLeft="3dp" >
    </ExpandableListView>

</RelativeLayout>